{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} -Editer un événement{% endblock %}


{% block body %}{{ parent() }}
    <h1 style="color: #0c84e4;
  font-size: 1.5rem;margin-top: 3rem">Modifier l'événement pour l'association "{{ assoEvent.organization.name }}" :</h1>
    <div class="container">

        <div class="mt-5">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="mb-lg-5">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Nom de l'événement :</label>
                            <div class="col-sm-9">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="mb-lg-5">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Inscrivez les détails de votre événement :</label>
                            <div class="col-sm-9">
                                {{ form_row(form.description) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Date de début :</label>
                        <div class="col-sm-9">
                            {{ form_row(form.beginAt) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Date de fin :</label>
                        <div class="col-sm-9">
                            {{ form_row(form.endAt) }}
                        </div>
                    </div>

                    <span style=" color: #0c84e4;">Fichiers image de l'évenement, en format jpg uniquement : (facultatif)</span>


                    <div class="row" style=" margin-top: 2rem">
                        {{ form_label(form.imageFileOne) }}
                        <div style="width: 89%; margin-left: 4px" class="custom-file">
                            {{ form_widget(form.imageFileOne) }}
                        </div>

                        <div class="card-img" style="margin-top: 2rem; text-align: center; margin-bottom: 2rem">
                            <img src="{{ vich_uploader_asset(assoEvent, 'imageFileOne') }}"
                                 alt style="width: 120px; height: 100px"/>
                        </div>
                    </div>

                <div class="row">
                    {{ form_label(form.imageFileTwo) }}
                    <div style="width: 89%; margin-left: 4px">
                        {{ form_widget(form.imageFileTwo) }}
                    </div>
                </div>
                <div class="card-img" style="margin-top: 2rem; text-align: center; margin-bottom: 2rem">
                    <img src="{{ vich_uploader_asset(assoEvent, 'imageFileTwo') }}"
                         alt style="width: 120px; height: 100px"/>
                </div>

                <div class="row" style="margin-bottom: 2rem">
                    {{ form_label(form.imageFileThree) }}
                    <div style="width: 89%; margin-left: 4px">
                        {{ form_widget(form.imageFileThree) }}
                    </div>

                    <div class="card-img" style="margin-top: 2rem; text-align: center; margin-bottom: 2rem">
                        <img src="{{ vich_uploader_asset(assoEvent, 'imageFileThree') }}"
                             alt style="width: 120px; height: 100px"/>
                    </div>
                </div>
                    <div style="color: #0c84e4; font-size: 1.1rem; margin-bottom: 2rem">
                        Association(s) partenaire(s) actuelle(s) :  {% for partner in partners %} {{ partner.name }}
                        {% endfor %}
                    </div>
                <div class="mb-lg-5">
                    <span style=" color: #0c84e4; font-size: 1.1rem;">Association(s) partenaire(s) (plusieurs choix possibles) : (facultatif)</span>
                    <div class="form-group" style="margin-top: 2rem">

                        {{ form_row(form.organizationsPartner) }}

                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="display: block">
        <div class="row justify-content-md-center">
            <div class="col col-lg-2">
                <a class="btn btn-primary" href="{{ path('admin_event_index') }}">
                    <button type="button" class=" btn btn-primary" style="width: 100px">Retour</button>
                    <i class="fa fa-undo-alt" id="retour"></i>
                </a>

            </div>
            <div class="col col-lg-2">
                <button type="submit" class="btn btn-success" style="height: 3.3rem;width: 148px">Enregistrer <i
                            class="fa fa-save" style="width: 2rem"></i></button>
                {{ form_end(form) }}
            </div>
            <div class="col col-lg-2">
                {{ include('admin/asso_event/_delete_form.html.twig') }}
            </div>
        </div>

    </div>
    </div>
    <footer style="text-align: center; margin: 3rem">
        <a href="{{ path('mentions_rgpd') }}">Mentions légales</a></footer>
{% endblock %}

